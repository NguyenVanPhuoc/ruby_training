<div class="page-header page-header-center">
  <h1><%= team.new_record? ? 'Thêm mới' : 'Chỉnh sửa' %></h1>
</div>

<div class="card form-card">
  <div class="card-header">
    <p><%= team.new_record? ? 'Thêm mới team' : 'Cập nhật thông tin team' %></p>
  </div>
  <%= form_with(model: team, local: true) do |form| %>
    <div class="card-body">
      <% if team.errors.any? %>
        <div class="alert alert-danger" style="margin-bottom: 24px;">
          <i class="fas fa-exclamation-circle"></i>
          <div>
            <strong><%= pluralize(team.errors.count, "lỗi") %> ngăn không cho lưu:</strong>
            <ul style="margin: 8px 0 0 24px;">
              <% team.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, "Tên Team", class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', placeholder: 'Nhập tên team' %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Mô tả", class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control', rows: 4, placeholder: 'Mô tả về team' %>
      </div>
    </div>
    <div class="card-footer text-body-secondary">
      <div class="form-actions">
        <%= link_to 'Trở lại', teams_path, class: 'btn btn-secondary' %>
        <%= form.submit team.new_record? ? 'Tạo mới' : 'Cập nhật', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>